<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="#01BCDB"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/btnReturn"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_left_line_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarUser"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_115sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/user"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/avatarUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"></TextView>

                <ImageButton
                    android:id="@+id/icEditUser"
                    android:visibility="gone"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintStart_toEndOf="@+id/txtNameUser"
                    app:layout_constraintTop_toTopOf="parent"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_rating"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout1">
                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:layout_marginLeft="@dimen/_140sdp"
                    android:textSize="@dimen/_18sdp">
                </TextView>

                <ImageView
                    android:id="@+id/icStar"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:src="@drawable/ic_star_full"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_5sdp">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_description"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_rating">
                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_description">
                <ImageButton
                    android:id="@+id/icBirthday"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/ic_birthday"
                    android:background="@color/white"
                    android:scaleType="fitCenter">
                </ImageButton>

                <TextView
                    android:id="@+id/txtBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd/MM/yyyy"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_5sdp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout4">
                <ImageButton
                    android:id="@+id/icEmail"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_email"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/_3sdp">
                </ImageButton>

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@gmail.com"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_10sdp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_rating_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout5">
                <TextView
                    android:id="@+id/txtDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you want to rate the doctor?"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginLeft="@dimen/_46sdp">
                </TextView>
                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_star_1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:button="@drawable/checkbox_star_big"
                        app:layout_constraintBottom_toBottomOf="@id/txtQualityTitle"
                        app:layout_constraintStart_toEndOf="@id/txtQualityTitle"
                        app:layout_constraintTop_toTopOf="@id/txtQualityTitle"></androidx.appcompat.widget.AppCompatCheckBox>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_star_2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:button="@drawable/checkbox_star_big"
                        app:layout_constraintBottom_toBottomOf="@id/checkbox_star_1"
                        app:layout_constraintStart_toEndOf="@id/checkbox_star_1"
                        app:layout_constraintTop_toTopOf="@id/checkbox_star_1"></androidx.appcompat.widget.AppCompatCheckBox>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_star_3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:button="@drawable/checkbox_star_big"
                        app:layout_constraintBottom_toBottomOf="@id/checkbox_star_2"
                        app:layout_constraintStart_toEndOf="@id/checkbox_star_2"
                        app:layout_constraintTop_toTopOf="@id/checkbox_star_2"></androidx.appcompat.widget.AppCompatCheckBox>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_star_4"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:button="@drawable/checkbox_star_big"
                        app:layout_constraintBottom_toBottomOf="@id/checkbox_star_3"
                        app:layout_constraintStart_toEndOf="@id/checkbox_star_3"
                        app:layout_constraintTop_toTopOf="@id/checkbox_star_3"></androidx.appcompat.widget.AppCompatCheckBox>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_star_5"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:button="@drawable/checkbox_star_big"
                        app:layout_constraintBottom_toBottomOf="@id/checkbox_star_4"
                        app:layout_constraintStart_toEndOf="@id/checkbox_star_4"
                        app:layout_constraintTop_toTopOf="@id/checkbox_star_4"></androidx.appcompat.widget.AppCompatCheckBox>

                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentUser" />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/btnPostUser"
            app:cardCornerRadius="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/mainColor"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.064">

                <ImageView
                    android:id="@+id/imgPostHome"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_post_home"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnMedicineUser"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/btnPostUser"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/greenMain"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMedicineHome"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_medicine_home"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_detailUser"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_post_user"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/btnPostUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_299sdp"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>