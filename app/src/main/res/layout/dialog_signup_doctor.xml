<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txtMessage"
        android:fontFamily="@font/jakartar"
        android:textColor="@color/textGray"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="When you register to become a doctor, you will have the permission to post medicine."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@id/txtMessage"
            app:layout_constraintStart_toStartOf="@id/txtMessage"
            app:layout_constraintEnd_toEndOf="@id/txtMessage"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/_12sdp"
                android:text="Description about your self:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <EditText
                android:id="@+id/edtDescription"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/seamless_frame"
                android:paddingLeft="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="@id/linearLayout1"
                app:layout_constraintLeft_toRightOf="@id/titlePost"
                app:layout_constraintEnd_toEndOf="parent"></EditText>
        </LinearLayout>
    <Button
        android:id="@+id/btnSignupToBeADoctor"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/greenMain"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:text="Sign up"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintEnd_toStartOf="@id/btnCancel">
    </Button>
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/btnRed"
        android:text="Cancel"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toEndOf="@id/btnSignupToBeADoctor"
        app:layout_constraintEnd_toEndOf="@id/linearLayout">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>