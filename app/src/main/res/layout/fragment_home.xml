<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_header"
        android:paddingTop="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ic_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:textColor="@color/gray"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/ic_calendar"
            app:layout_constraintStart_toEndOf="@id/ic_calendar"
            android:textSize="@dimen/_8sdp"
            android:text="Mon, 11 Nov 2023"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/txtHello"
            android:textStyle="bold"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="@id/ic_calendar"
            app:layout_constraintTop_toBottomOf="@id/ic_calendar"
            android:text="Good morning, LuÃ¢n!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:id="@+id/ic_message"
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:id="@+id/txtBadge"
            android:gravity="center"
            android:text="2+"
            android:textColor="@color/white"
            android:background="@drawable/badge_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/_3sdp"
            android:paddingStart="@dimen/_3sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"></TextView>
        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            app:layout_constraintTop_toBottomOf="@id/txtHello"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="@dimen/_100sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtCategory"
                android:text="@string/txtCategory"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/jakartar"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:scrollbars="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMedicine"
                        app:cardElevation="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/greenMain">
                            <ImageView
                                android:scaleType="centerCrop"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:src="@drawable/img_medicine_home"></ImageView>
                            <TextView
                                android:text="@string/txtMedicines"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDoctor"
                        android:layout_marginLeft="@dimen/_15sdp"
                        app:cardElevation="@dimen/_5sdp"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/btnRed">
                            <ImageView
                                android:layout_marginRight="@dimen/_5sdp"
                                android:scaleType="centerCrop"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:src="@drawable/img_doctor_home"></ImageView>
                            <TextView
                                android:text="@string/txtDoctors"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPost"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:cardElevation="@dimen/_5sdp"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/mainColor">
                            <ImageView
                                android:scaleType="centerCrop"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:src="@drawable/img_post_home"></ImageView>
                            <TextView
                                android:text="@string/txtPosts"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:id="@+id/txtNextWork"
                android:text="@string/txtNextWork"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/jakartar"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView_next_work"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/txtNextWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/txtNotAnyWork"
                app:layout_constraintTop_toBottomOf="@id/recycleView_next_work"
                android:fontFamily="@font/jakartar"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/gray"
                android:textSize="@dimen/_16sdp"
                android:text="You have not any work today!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/txtNewPosts"
                android:text="@string/txtNewPosts"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/jakartar"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/txtNotAnyWork"
                app:layout_constraintStart_toStartOf="@id/txtNextWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:id="@+id/ic_arrow_right"
                app:layout_constraintVertical_bias="0.7"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@id/txtNewPosts"
                app:layout_constraintBottom_toBottomOf="@id/txtNewPosts"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:id="@+id/txtShowMore"
                android:text="@string/txtShowMore"
                android:layout_marginBottom="@dimen/_4sdp"
                android:fontFamily="@font/jakartar"
                android:textColor="@color/greenMain"
                android:layout_marginRight="@dimen/_3sdp"
                app:layout_constraintBottom_toBottomOf="@id/ic_arrow_right"
                app:layout_constraintTop_toTopOf="@id/ic_arrow_right"
                app:layout_constraintEnd_toStartOf="@id/ic_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_listposthome"
                android:layout_marginTop="@dimen/_5sdp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_post_home"
                app:layout_constraintTop_toBottomOf="@id/txtNewPosts"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>